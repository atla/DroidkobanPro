<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:padding="2dp" android:layout_width="wrap_content">
<RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_width="wrap_content">
    <ImageView android:src="@drawable/t2" android:layout_width="wrap_content" android:id="@+id/image" android:layout_height="wrap_content"></ImageView>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/levelLabel" android:text="Level 1" android:layout_alignBottom="@+id/image" android:layout_alignLeft="@+id/image" android:layout_alignRight="@+id/image" android:gravity="center" android:textColor="#fff" android:background="#88000000" android:paddingBottom="3dp" android:paddingLeft="2dp" android:paddingRight="2dp" android:paddingTop="2dp"></TextView>
</RelativeLayout>
<TextView android:gravity="center" android:layout_height="fill_parent" android:layout_width="fill_parent" android:paddingBottom="5dp" android:paddingTop="5dp" android:textColor="#8f8" android:text="unlocked" android:id="@+id/status"></TextView>

</LinearLayout>
