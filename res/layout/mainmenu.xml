<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/mainMenuView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/play_button" android:layout_marginLeft="200dp"/>

        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="32dp">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/title" android:focusable="false"/>

                
                
                
                <RelativeLayout
                    android:id="@+id/PlayResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    
                    android:clickable="true"
                    android:gravity="bottom" android:layout_marginBottom="8dp">

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/play_button" android:paddingBottom="11dp" android:paddingTop="10dp" android:paddingRight="5dp" android:paddingLeft="5dp"/>
                    
                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#aa000000"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="Resume Game"
                        android:textColor="#fff"
                        android:textSize="16sp" android:focusable="false" android:layout_alignBottom="@+id/imageButton1" android:layout_marginLeft="5dp" android:layout_marginBottom="4dp" android:paddingLeft="5dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/Select"
                    android:layout_width="156dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/select_button"
                    android:clickable="true"
                    android:gravity="bottom" android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#aa000000"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="Select Story"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chooseButton"
                    android:layout_width="156dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/choose"
                    android:clickable="true"
                    android:gravity="bottom" android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#aa000000"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="Choose your Droid!"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/achieveButton"
                    android:layout_width="156dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/achieve"
                    android:clickable="true"
                    android:gravity="bottom" android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#aa000000"
                        android:gravity="center"
                        android:paddingRight="5dp"
                        android:text="See Achievements"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#222"
                android:orientation="vertical" android:layout_marginLeft="8dp" android:layout_marginRight="8dp">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Stories"
                    android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="10dp" android:layout_marginBottom="8dp" android:layout_marginTop="36dp"/>

                <LinearLayout
                    android:id="@+id/spaceButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/space"
                    android:clickable="true"
                    android:gravity="bottom" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spaceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mayat"
                    android:clickable="true"
                    android:gravity="bottom" android:layout_marginLeft="6dp">
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="40dp" >

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#88000000"
                android:gravity="center|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="26dp"
                    android:layout_height="10dp" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/donate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/donateImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/donate" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="50dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="Buy pro"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/instructionsImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/settings" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="45dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="Settings"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/facebookButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/instructionsImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        android:src="@drawable/like" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="45dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="Like"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/instructionsImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/videos" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="45dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="See Videos"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/instructionsImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/instructions" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="See instructions"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/aboutImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/about" >
                    </ImageView>

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center"
                        android:text="About"
                        android:textColor="#eee"
                        android:textSize="12sp" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|bottom"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ofButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/of" >
        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

</FrameLayout>